{
  "compilerOptions": {
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./lib",
    "sourceMap": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "module": "commonjs",
    "target": "ES5",
    "allowJs": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "./src/**__tests__/**/*", ".src/**__mocks__/**/*"]
}
